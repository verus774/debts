<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.verus.debts">

    <application
        android:name=".DebtApplication"
        android:allowBackup="true"
        android:icon="@mipmap/money_bag"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="debts.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="by.verus.debts.Debt" />

        <activity
            android:name=".DebtListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DebtAddActivity"
            android:label="@string/activity_debt_add_title"
            android:parentActivityName=".DebtListActivity" />

        <activity
            android:name=".DebtAddPagerActivity"
            android:label="@string/activity_debt_add_pager_title"
            android:parentActivityName=".DebtListActivity" />

    </application>

</manifest>